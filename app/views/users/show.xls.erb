<table border="1">
  <tr>
    <th>ID</th>
    <th>Content</th>
    <th>User</th>
    <th>Create At</th>
  </tr>
  <% @microposts.each do |micropost| %>
  <tr>
    <td><%= micropost.id %></td>
    <td><%= micropost.content %></td>
    <td><%= micropost.user_id %></td>
    <td><%= micropost.created_at %></td>
  </tr>
  <% end %>
</table>