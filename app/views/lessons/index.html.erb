<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="box box-primary">
      <h1>Your Lesson</h1>
      <div class="box-body">
        <table class="table table-hover">
          <tr>
            <th>#</th>
            <th>Lesson</th>
            <th>Score</th>
            <th></th>
          </tr>
          <% i=0 %>
          <% @lessons.each do |lesson| %>
            <tr>
              <td><%= i=i+1 %></td>
              <td>Lesson <%= i %></td>
              <td><%= lesson.score %> / <%= lesson.learns.count %></td>
              <td><%= link_to 'Show', category_lesson_path(lesson.category_id, lesson), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
