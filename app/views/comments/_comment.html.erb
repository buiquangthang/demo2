<li id="micropost-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content">
    <%= simple_format(comment.content) %>
  </span>
  <span class="timestamp">
    Commented <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user?(comment.user) %>
      <%= link_to "delete", micropost_comment_path(comment.micropost, comment),                              method: :delete,
                                       data: { confirm: "You sure?" },
                                       remote: true %>
    <% end %>
  </span>
</li>