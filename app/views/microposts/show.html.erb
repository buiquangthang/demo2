<% provide(:title, @user) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="col-md-8">
    <p><%= @micropost.content %></p>
    <%= image_tag @micropost.picture.url if @micropost.picture? %>
    <h4 id="comment_quantity">Comments (<%= @micropost.comments.count %>)</h4>
    <%= render "comments/form"%>
    <% if @micropost.comments.any? %>
      <ol class="microposts">
        <%= render @comments %>
      </ol>
      <%= will_paginate @comments %>
    <% end %>
  </div>
</div>