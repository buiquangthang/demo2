<div class="container">
  <div class="row">
    <% @categories.each do |category|%>
      <div class="col-md-4">
        <div class="product-item">
          <div class="pi-img-wrapper">
            <img src="<%= category.picture %>" class="img-responsive" 
                 alt="Berry Lace Dress">
            <div>
              <%= link_to "Word", category_path(category), class: "btn" %>
              <%= link_to "History", category_lessons_path(category), 
                                     class: "btn" %>
            </div>
          </div>
          <h3><%= category.name %></h3>
          <div class="pi-price">
            <%= your_result(category) %>/<%= quantity_of_question(category) %>
          </div>
          <% if is_finished?(category) %>
            <a class="btn add2cart disabled">Finish</a>
          <% else %>
            <%= link_to "New Lesson", new_category_lesson_path(category),                        
                                      class: "btn add2cart" %>
          <% end %>
          <div class="sticker sticker-new"></div>
        </div>
      </div>
    <% end %>
  </div>
</div>

